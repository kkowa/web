{
  "type": "object",
  "required": [
    "common",
    "serviceAccount",
    "imagePullSecrets",
    "app",
    "service"
  ],
  "additionalProperties": false,
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "type": "object"
    },
    "exports": {
      "type": "object"
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "labels": {
          "type": "object"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "oneOf": [
        {
          "required": [
            "create"
          ],
          "additionalProperties": false,
          "properties": {
            "create": {
              "const": true
            },
            "name": {
              "type": "string"
            },
            "annotations": {
              "type": "object"
            }
          }
        },
        {
          "required": [
            "create"
          ],
          "additionalProperties": false,
          "properties": {
            "create": {
              "const": false
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "app": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "image": {
          "type": "object",
          "required": [
            "repository",
            "pullPolicy"
          ],
          "additionalProperties": false,
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            },
            "pullPolicy": {
              "type": "string",
              "enum": [
                "IfNotPresent",
                "Always",
                "Never"
              ]
            }
          }
        },
        "config": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "serverURL": {
              "type": "string"
            }
          }
        },
        "components": {
          "type": "object",
          "required": [
            "web"
          ],
          "additionalProperties": false,
          "properties": {
            "web": {
              "allOf": [
                {
                  "$ref": "#/properties/app/properties/components/definitions/scalable"
                },
                {
                  "$ref": "#/properties/app/properties/components/definitions/component"
                }
              ]
            }
          },
          "definitions": {
            "scalable": {
              "type": "object",
              "required": [
                "replicas",
                "autoscaling"
              ],
              "properties": {
                "replicas": {
                  "type": "number",
                  "minimum": 1
                },
                "autoscaling": {
                  "type": "object",
                  "oneOf": [
                    {
                      "required": [
                        "enabled",
                        "min",
                        "max",
                        "metrics"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "enabled": {
                          "const": true
                        },
                        "min": {
                          "type": "number",
                          "minimum": 1
                        },
                        "max": {
                          "type": "number",
                          "minimum": 1
                        },
                        "metrics": {
                          "type": "array",
                          "items": {
                            "type": "object"
                          }
                        },
                        "behavior": {
                          "type": "object"
                        },
                        "status": {
                          "type": "object"
                        }
                      }
                    },
                    {
                      "required": [
                        "enabled"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "enabled": {
                          "const": false
                        }
                      }
                    }
                  ]
                }
              }
            },
            "component": {
              "type": "object",
              "required": [
                "securityContext",
                "container"
              ],
              "properties": {
                "automountServiceAccountToken": {
                  "type": "boolean"
                },
                "securityContext": {
                  "type": "object"
                },
                "container": {
                  "type": "object",
                  "required": [
                    "securityContext",
                    "resources"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "securityContext": {
                      "type": "object"
                    },
                    "resources": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LoadBalancer",
            "NodePort",
            "ClusterIP",
            "ExternalName"
          ]
        },
        "port": {
          "type": "number"
        }
      }
    }
  }
}
